<%= stylesheet_link_tag 'welcome.css' %>

<body>
<ul>
  <li><%= link_to "Login", login_url %></li>
  <li><%= link_to "Signup", new_user_url %></li>
  <li><%= link_to "Logout", logout_url, method: :delete %></li>
  <li><%= link_to "User_List", users_path, method: :get%></li>
</ul>

<h1> Welcome to UE COVID-19 Tracker</h1>
<% flash.each do |type, msg| %>
    <div>
        <%=msg%>
    </div>
<% end %>
<% if logged_in? %>
    <h1>You are logged in, <%= current_user.username%>
    </h1>
    <h2> Search by Number</h2>
    <%= form_tag(search_page_path, method: :get) do %>  
    <%=search_field_tag :search, params[:search], placeholder: "Search", class: "form-control"%>
    <%= submit_tag ("Search")%>
    <% end%>
<%end%>







</body>
